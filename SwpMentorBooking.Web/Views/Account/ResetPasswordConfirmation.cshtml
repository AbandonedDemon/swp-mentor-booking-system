@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mentoring Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/login.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid min-vh-100 d-flex flex-column">
        <header class="py-3 bg-white shadow-sm">
            <div class="container">
                <div class="d-flex align-items-center">
                    <img src="~/image/mentor.jpg" alt="Mentoring Logo" class="me-2" width="40" height="40">
                    <h1 class="h4 mb-0">Mentoring</h1>
                </div>
            </div>
        </header>
        <main class="flex-grow-1 d-flex align-items-center py-5">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-6 col-lg-5">
                        <div class="card shadow">
                            <div class="card-body p-4">
                                <div class="tab-content" id="loginTabContent">
                                    <div class="tab-pane fade show active" role="tabpanel">
                                        <div class="reset-password-container">
                                            <div class="confirmation-message">
                                                <h2>Password Reset</h2>
                                                <p>Your password has been successfully reset.</p>
                                                <p>You can now log in with your new password.</p>
                                            </div>

                                            <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Back to Login</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</body>
</html>