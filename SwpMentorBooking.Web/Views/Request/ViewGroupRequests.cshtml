@model List<Request>

<a href="@Url.Action("ViewGroupRequests", "Request")" class="btn btn-secondary mb-2">Back to Requests</a>
<h2>My Group Requests</h2>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Sent</th>
            <th>Processed</th>
            <th>Response</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var request in Model)
        {
            <tr>
                <td>@request.Title</td>
                <td>@request.Timestamp.ToString("g")</td>
                <td>
                    @{
                        if (request.Responses != null && request.Responses.Any())
                        {
                            <span>@request.Responses.First().Timestamp.ToString("g")</span>
                        }
                        else
                        {
                            <span>-</span>
                        }
                    }
                </td>
                <td>
                    @{
                        if (request.Responses != null && request.Responses.Any())
                        {
                            <span>@request.Responses.First().Content</span>
                        }
                        else
                        {
                            <span>-</span>
                        }
                    }
                </td>
                <td>@request.Status</td>
                <td>
                    <a href="@Url.Action("ViewDetails", new { id = request.Id })" class="btn btn-info btn-sm">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("SendRequest", "Request")" class="btn btn-primary">Submit a New Request</a>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>