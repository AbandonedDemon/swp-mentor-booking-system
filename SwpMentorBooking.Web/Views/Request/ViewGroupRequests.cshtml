@model List<Request>

<h2>My Group Requests</h2>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Status</th>
            <th>Timestamp</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var request in Model)
        {
            <tr>
                <td>@request.Title</td>
                <td>@request.Status</td>
                <td>@request.Timestamp.ToString("g")</td> <!-- Format date properly -->
                <td>
                    <a href="@Url.Action("ViewDetails", new { id = request.Id })" class="btn btn-info">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("SendRequest", "Request")" class="btn btn-primary">Submit a New Request</a>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>