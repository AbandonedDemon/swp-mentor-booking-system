                                @foreach (var mentor in Model)
                                {

                                    <div class="col">
                                        <div class="card h-100 mentor-card">
                                            <img src="~/image/mentor-placeholder.jpg" class="card-img-top" alt="@mentor.User.FullName">
                                            <div class="card-body">
                                                <h5 class="card-title">@mentor.User.FullName</h5>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <p>Score: @mentor.BookingScore</p>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <ul style="list-style: none">
                                                            @foreach (var language in mentor.MainProgrammingLanguage.Split("||"))
                                                            {
                                                                <li><span class="badge bg-dark">@language</span></li>
                                                            }
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="card-footer">
                                                <a asp-controller="Student" asp-action="ViewMentorProfile"
                                                   asp-route-mentorId="@mentor.UserId" class="btn btn-primary w-100">
                                                    View
                                                    Profile
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/site.js" asp-append-version="true"></script>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
