@model ImportUserTypeVM

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Import Mentor</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .content-box {
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <main class="col-md-12 ms-sm-auto col-lg-12 px-md-4">
                <div class="col-6 col-md-3">
                    <a asp-controller="Admin" asp-action="ManageUser" class="btn btn-secondary w-100">
                        <i class="bi bi-caret-left-fill white"></i> Back to Main page
                    </a>
                </div>
                <div class="content-box">
                    <h1 class="h2">Import User</h1>
                    <form asp-controller="Admin" method="post" class="row" enctype="multipart/form-data">
                        <select asp-for="SelectedUserType" name="SelectedUserType" asp-items="@Model.UserType" style="margin-left: 20px; width: 80%">
                            <option disabled selected>-- Select User Type --</option>
                        </select>
                        <div class="p-3">
                            <div class="form-floating py-2 col-12">
                                <input type="file" name="inputFile" asp-for="InputFile" required />
                            </div>
                            <div class="row pt-2">
                                <div class="col-6 col-md-3">
                                    <button type="submit" class="btn btn-success"> <i class="bi bi-plus-square-dotted"></i>Import</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </main>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>