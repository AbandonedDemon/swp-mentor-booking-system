@model IEnumerable<User>

<div class="card bg-purple text-white mb-4">
    <div class="card-body">
        <h1 class="text-center mb-0">User List</h1>
    </div>
</div>

<div class="mb-3">
    <a asp-controller="Administrator" asp-action="Import" class="btn btn-purple">
        <i class="bi bi-plus-circle"></i><i class="fas fa-plus"></i> Import User from list
    </a>
</div>

<div class="w-75 btn-group" role="group">
    <a asp-controller="Administrator" asp-action="SendEmail"
       class="btn btn-success mx-3">
        <i class="bi bi-pencil-square"></i>Send the email
    </a>
</div>

<div class="table-responsive">
    <table class="table table-hover table-bordered shadow-sm">
        <thead class="bg-purple text-white">
            <tr>
                <th>Email</th>
                <th>Password</th>
                <th>Full Name</th>
                <th>Phone Number</th>
                <th>Gender</th>
                <th>Profile Photo</th>
                <th>Role</th>
                <th>Status</th>
                <th class="text-center">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle">@item.Email</td>
                    <td class="align-middle">@item.Password</td>
                    <td class="align-middle">@item.FullName</td>
                    <td class="align-middle">@item.Phone</td>
                    <td class="align-middle">@item.Gender</td>
                    <td class="align-middle">@item.ProfilePhoto</td>
                    <td class="align-middle">@item.Role</td>
                    <td class="align-middle">@item.IsActive</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Adminstrator" asp-action="Update" asp-route-characterId="@item.Id"
                               class="btn btn-success mx-3">
                                <i class="bi bi-pencil-square"></i>Edit
                            </a>
                            <a asp-controller="Administrator" asp-action="Delete" asp-route-characterId="@item.Id"
                               class="btn btn-danger mx-3">
                                <i class="bi bi-trash-fill"></i>Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .bg-purple {
        background-color: #6f42c1;
    }

    .text-purple {
        color: #6f42c1;
    }

    .btn-purple {
        background-color: #6f42c1;
        color: white;
    }

        .btn-purple:hover {
            background-color: #5a32a3;
            color: white;
        }
</style>