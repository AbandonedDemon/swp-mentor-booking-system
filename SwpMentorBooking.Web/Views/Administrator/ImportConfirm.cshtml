@model ImportUserPreviewVM

<div class="card bg-purple text-white mb-4">
    <div class="card-body">
        <h1 class="text-center mb-0">User List Preview</h1>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-hover table-bordered shadow-sm">
        <thead class="bg-purple text-white">
            <tr>
                <th>Email</th>
                <th>Full Name</th>
                <th>Student Code</th>
                <th>Phone</th>
                <th>Gender</th>
                <th>Validation Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Results)
            {
                <tr>
                    <td class="align-middle">@item.Record.Email</td>
                    <td class="align-middle">@item.Record.FullName</td>
                    <td class="align-middle">@item.Record.StudentCode</td>
                    <td class="align-middle">@item.Record.Phone</td>
                    <td class="align-middle">@item.Record.Gender</td>
                    <td class="align-middle">
                        @if (item.Errors.Any())
                        {
                            <ul>
                                @foreach (var error in item.Errors)
                                {
                                    <li class="text-danger">@error</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span class="text-success">Valid</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<form asp-action="ImportConfirm" method="post">
    <input type="hidden" name="DTOJson" value='@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.Results.Where(r => !r.Errors.Any()).Select(r => r.Record)))' />
