@model List<ViewBookingVM>

<h2>Bookings</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Mentor Name</th>
            <th>Schedule Date</th>
            <th>Time Slot</th>
            <th>Booking Cost</th>
            <th>Booking Time</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            var booking = Model[i];
            <tr>
                <td>@(i + 1)</td>
                <td>@booking.MentorName</td>
                <td>@booking.ScheduleDate.ToString("dddd, MMMM d, yyyy")</td>
                <td>@booking.SlotStartTime.ToString("HH:mm") - @booking.SlotEndTime.ToString("HH:mm")</td>
                <td>@booking.BookingCost</td>
                <td>@booking.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>@booking.Status</td>
                <td>
                    <a asp-action="BookingDetails" asp-route-bookingId="@booking.BookingId" class="btn btn-primary btn-sm">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Student" asp-action="Index" class="btn btn-secondary">Back to Home</a>