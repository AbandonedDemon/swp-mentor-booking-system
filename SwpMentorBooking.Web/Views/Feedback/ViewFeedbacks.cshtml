@model IEnumerable<FeedbackDetailVM>


<head>
    <style>
        .content-box {
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-top: 20px;
        }
    </style>
</head>

<div class="container-fluid">
    <div class="row">
        <!-- Main content -->
        <main class="col-md-12 ms-sm-auto col-lg-12 px-md-4">
            <div class="content-box">

                <h2>My Feedbacks</h2>

                    <h3>Feedbacks Given</h3>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Booking</th>
                                <th>To</th>
                                <th>Rating</th>
                                <th>Comment</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var feedback in Model.Where(f => f.IsGivenByCurrentUser))
                            {
                                <tr>
                                    <td>@feedback.BookingId</td>
                                    <td>@feedback.ReceiverName</td>
                                    <td>@feedback.Rating</td>
                                    <td>@feedback.Comment</td>
                                    <td>@feedback.Date.ToString("g")</td>
                                </tr>
                            }
                        </tbody>
                    </table>

            </div>
        </main>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>