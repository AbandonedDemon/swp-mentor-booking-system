@model IEnumerable<FeedbackDetailVM>


<div class="card mb-4">
    <div class="card-body">
        <h2>My Feedbacks</h2>
    </div>
    <div class="card-body">
        <div class="col-md-6">
            <h3>Feedbacks Given</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Booking</th>
                        <th>To</th>
                        <th>Rating</th>
                        <th>Comment</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var feedback in Model.Where(f => f.IsGivenByCurrentUser))
                    {
                        <tr>
                            <td>@feedback.BookingId</td>
                            <td>@feedback.ReceiverName</td>
                            <td>@feedback.Rating</td>
                            <td>@feedback.Comment</td>
                            <td>@feedback.Date.ToString("g")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>